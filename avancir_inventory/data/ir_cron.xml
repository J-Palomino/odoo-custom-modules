<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Scheduled Action for Avancir Product Sync -->
    <record id="ir_cron_avancir_sync_products" model="ir.cron">
        <field name="name">Avancir: Sync Products</field>
        <field name="model_id" ref="model_avancir_sync"/>
        <field name="state">code</field>
        <field name="code">model.cron_sync_products()</field>
        <field name="interval_number">24</field>
        <field name="interval_type">hours</field>
        <field name="active" eval="False"/>
    </record>
</odoo>
